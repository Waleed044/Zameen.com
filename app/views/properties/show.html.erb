<%= link_to 'Back', properties_path, class: "btn btn-success" %><br>
<%= image_tag(@property.image, :size => "400x250", crop: :fill)%>

<p>
  <strong>Owner:</strong>
  <%= @property.owner %>
</p>
 
<p>
  <strong>Address:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>Size:</strong>
  <%= @property.size %>
</p>

<p>
  <strong>Floors:</strong>
  <%= @property.floors %>
</p>

<p>
  <strong>Built Year:</strong>
  <%= @property.year_built %>
</p>

<p>
  <strong>Price:</strong>
  <%= @property.price %>
</p>

<p>
  <strong>Property Type:</strong>
  <%= @property.property_type %>
</p>

<p>
  <h4> Queries</h4>
  <% @property.queries.each do |query| %>
  <strong>Commenter:</strong>
  <%= query.subject %>
  <strong>Query:</strong>
  <%= query.message %> 
  <%end%>
</p>

<h3>Ask Your Query:</h3>
<%= render 'queries/form'%>